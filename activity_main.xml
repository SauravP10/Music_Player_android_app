<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Music Player"
        android:textSize="30dp"
    />
    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_centerHorizontal="true"
        android:text="title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        />
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:src="@mipmap/ic_launcher_round"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/button_fwd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/seekbar"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="-74dp"
        android:text="||" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button_pause"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/button_pause"
        android:layout_toRightOf="@id/button_pause"
        android:text="play" />

    <Button
        android:id="@+id/button_rev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button_play"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/button_play"
        android:layout_toRightOf="@id/button_play"
        android:text="<<" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar"
        android:layout_alignLeft="@id/textview_name"
        android:layout_alignStart="@id/textview_name"
        android:layout_alignRight="@id/textview_name"
        android:layout_alignEnd="@id/textview_name"
        android:layout_above="@id/button_fwd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="small text"
        android:id="@+id/textview2"
        android:layout_above="@id/seekbar"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="small text"
        android:id="@+id/textview3"
        android:layout_above="@id/seekbar"
        android:layout_alignRight="@id/button_rev"
        android:layout_alignEnd="@id/button_rev"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="med text"
        android:id="@+id/textview4"
        android:layout_alignBaseline="@id/textview2"
        android:layout_alignBottom="@id/textview2"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>